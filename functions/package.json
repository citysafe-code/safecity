{
  "name": "city-pulse-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for City Pulse social media synthesis and image analysis",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "geolib": "^3.3.4",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}